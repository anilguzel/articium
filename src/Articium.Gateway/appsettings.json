{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Ocelot": {
    "Authentication": {
      "Schemes": {
        "Bearer": {
          "Handler": {
            "Type": "JwtBearer",
            "Options": {
              "SigningKey": "this is my custom Secret key for authentication"
            }
          }
        }
      }
    },
    "DownstreamRoutes": [
      {
        "Path": "/api/article", // buraya gitmek istediginde
        //"Authentication": {
        //  "Required": true,
        //  "AllowedScopes": [ "writer" ] // rollerde bunlar varsa izin ver
        //},
        "Handlers": [
          {
            "Type": "Varnish",
            "Options": {
              "Methods" : ["GET"],
              "UpstreamHost": "varnish-server",
              "UpstreamPort": 8081,
              "UseHttps": false,
              "UseCompression": true
            }
          },
          {
            "Type": "HttpClient",
            "Options": {
              "UpstreamUrl": "http://article-api:8082/api/article"
            }
          }
        ]
      },
      {
        "Path": "/api/review",
        //"Authentication": {
        //  "Required": true,
        //  "AllowedScopes": [ "reviewer" ]
        //},
        "Handlers": [
          {
            "Type": "Varnish",
            "Options": {
              "Methods": [ "GET" ],
              "UpstreamHost": "varnish-server",
              "UpstreamPort": 8081,
              "UseHttps": false,
              "UseCompression": true
            }
          },
          {
            "Type": "HttpClient",
            "Options": {
              "UpstreamUrl": "https://review-api:8083/api/review"
            }
          }
        ]
      }
    ]
  },
  "AllowedHosts": "*"
}
